{
  "name": "custom-trainer",
  "version": "0.1.14",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "ELECTRON_START_URL=http://localhost:3000 electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "cd renderer/ && npm run build && cd ../ && electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/modox94/Custom-Trainer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/modox94/Custom-Trainer/issues"
  },
  "homepage": "https://github.com/modox94/Custom-Trainer#readme",
  "description": "Ð¡ustom app for control the trainers",
  "dependencies": {
    "ajv": "^8.12.0",
    "chokidar": "^3.5.3",
    "lodash": "^4.17.21",
    "mcp-spi-adc": "^3.2.0",
    "node-ble": "^1.9.0",
    "onoff": "^6.0.3",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "electron": "^23.2.0",
    "eslint": "^8.36.0",
    "prettier": "^2.8.7"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "categories": [
                "Utility"
              ],
              "description": "Application for using elliptical or bike trainer with RPI.",
              "productName": "Custom Trainer",
              "homepage": "https://github.com/modox94/Custom-Trainer",
              "maintainer": "Nikita Novoselov",
              "icon": "./other/icon.png"
            }
          }
        }
      ]
    }
