{
  "name": "custom-trainer",
  "version": "0.1.17",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "env $(cat dev.env) electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "cd renderer/ && npm run build && cd ../ && electron-forge make",
    "web": "node web.js",
    "web-dev": "env $(cat web.env) nodemon web.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/modox94/Custom-Trainer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/modox94/Custom-Trainer/issues"
  },
  "homepage": "https://github.com/modox94/Custom-Trainer#readme",
  "description": "Ð¡ustom app for control the trainers",
  "dependencies": {
    "ajv": "^8.12.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "mcp-spi-adc": "^3.2.0",
    "node-ble": "^1.9.0",
    "onoff": "^6.0.3",
    "sudo-prompt": "^9.2.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.1.0",
    "@electron-forge/maker-deb": "^7.1.0",
    "electron": "^27.1.2",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "categories": [
                "Utility"
              ],
              "description": "Application for using elliptical or bike trainer with RPI.",
              "productName": "Custom Trainer",
              "homepage": "https://github.com/modox94/Custom-Trainer",
              "maintainer": "Nikita Novoselov",
              "icon": "./other/icon.png"
            }
          }
        }
      ]
    }
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
